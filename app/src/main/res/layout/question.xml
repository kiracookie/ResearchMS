<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cookie.kira.researchms.activity.MainActivity">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="355dp"
        android:layout_height="116dp"
        android:layout_marginBottom="361dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="题目"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/optionTextView"
        android:layout_width="353dp"
        android:layout_height="244dp"
        android:layout_marginBottom="95dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="选项"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="44dp"
        android:text="取消"
        app:layout_constraintTop_toBottomOf="@+id/optionTextView"
        app:layout_constraintRight_toLeftOf="@+id/questionListBtn" />

    <Button
        android:id="@+id/questionListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="目录"
        app:layout_constraintTop_toBottomOf="@+id/optionTextView"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="44dp"
        android:text="下一题"
        app:layout_constraintTop_toBottomOf="@+id/optionTextView"
        app:layout_constraintLeft_toRightOf="@+id/questionListBtn" />


</android.support.constraint.ConstraintLayout>
